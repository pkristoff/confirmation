
<%= render partial: 'shared/sorting_candidate_selection',
           :locals => {
               confirmation_event: nil,
               candidates: @candidates,
               route: :candidates,
               other_columns: {
                   headers: [
                       t('views.common.delete'),
                       t('views.nav.edit'),
                       t('views.nav.email')
                   ],
                   rows: [
                       lambda {|candidate| link_to t('views.common.delete'), destroy_candidate_path(candidate.id), data: {confirm: t('views.common.are_you_sure')}, method: :delete },
                       lambda {|candidate| link_to t('views.nav.edit'), event_candidate_path(candidate.id) },
                       lambda {|candidate| link_to t('views.nav.email'), email_candidate_path(candidate.id) }
                   ]
               }
           } %>