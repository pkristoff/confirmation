
<%= form_for(resource, as: resource_name,
             url: create_admin_path,
             html: { method: :post }) do |f| %>
  <h2><%= t('views.admins.heading.new') %> </h2>
  <h3>views/admins/registration/new</h3>
  <%= render 'devise/shared/error_messages', resource: resource, for_reset_password: false %>

  <div class="field">
    <%= f.label :account_name %><br/>
    <%= f.text_field :account_name, disabled: true %>
  </div>
  <div class="field">
    <%= f.label :name %><br/>
    <%= f.text_field :name, disabled: true %>
  </div>

  <%= field_set_tag t('field_set.admin.contact'), class: 'fieldset' do %>

    <div class="field">
      <%= f.label :contact_name %><br/>
      <%= f.text_field :contact_name, autofocus: true %>
    </div>

    <div class="field">
      <%= f.label :email %><br/>
      <%= f.email_field :email, autofocus: false %>
    </div>

    <div class="field">
      <%= f.label :contact_phone %><br/>
      <%= f.text_field :contact_phone, autofocus: false %>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :password %><br/>
    <%= f.password_field :password, autocomplete: 'off' %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br/>
    <%= f.password_field :password_confirmation, autocomplete: 'off' %>
  </div>

  <div class="actions">
    <%= f.submit t('views.admins.button.create'), id: 'update' %>
  </div>
<% end %>
