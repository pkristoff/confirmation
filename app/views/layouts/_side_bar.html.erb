<%= require 'constants' %>


<% if admin_signed_in? %>
    <% if admin_signed_in? %>
        <ul id = "admin-sidebar" >
          <li ><%= link_to I18n.t('views.nav.add_new_admin'), new_admin_registration_path %></li >
          <li ><%= link_to I18n.t('views.nav.edit_account'), edit_admin_registration_path %></li >
          <li ><%= link_to I18n.t('views.nav.candidates'), candidates_path %></li >
          <li ><%= link_to I18n.t('views.nav.adhoc_mailing'), adhoc_mailing_path %></li >
          <li ><%= link_to I18n.t('views.nav.monthly_mass_mailing'), monthly_mass_mailing_path %></li >
          <li ><%= link_to I18n.t('views.nav.add_new_candidate'), new_candidate_path %></li >
          <li ><%= link_to I18n.t('views.nav.admins'), admins_path %></li >
          <li ><%= link_to I18n.t('views.nav.events'), edit_multiple_confirmation_events_path %></li >
          <li ><%= link_to I18n.t('views.nav.export_attend_retreat'), export_lists_retreat_path %></li >
          <li ><%= link_to I18n.t('views.nav.export_baptized_at_stmm'), export_lists_baptism_path %></li >
          <li ><%= link_to I18n.t('views.nav.export_sponsor_at_stmm'), export_lists_sponsor_path %></li >
          <li ><%= link_to I18n.t('views.nav.export_candidate_event_status'), export_lists_events_path %></li >
          <li ><%= link_to I18n.t('views.nav.other'), new_candidate_import_path %></li >
        </ul >
        <% if defined?(resource) && (!resource.nil?) && (!resource.new_record?) && (resource.is_a? Candidate) %>
            <p class = "sidebar-header no-link" >Candidate: <%= "#{resource.candidate_sheet.first_name} #{resource.candidate_sheet.last_name}" %></p >

            <ul id = "candidate-sidebar" >
              <li ><%= link_to "#{I18n.t('label.sidebar.candidate_covenant_agreement')}", candidate_event_to_path(I18n.t('events.candidate_covenant_agreement'), resource.id) %></li >
              <li ><%= link_to "#{I18n.t('label.sidebar.candidate_information_sheet')}", candidate_event_to_path(I18n.t('events.candidate_information_sheet'), resource.id) %></li >
              <li ><%= link_to "#{I18n.t('label.sidebar.baptismal_certificate')}", candidate_event_to_path(I18n.t('events.baptismal_certificate'), resource.id) %></li >
              <li ><%= link_to "#{I18n.t('label.sidebar.sponsor_covenant')}", candidate_event_to_path(I18n.t('events.sponsor_covenant'), resource.id) %></li >
              <li ><%= link_to "#{I18n.t('label.sidebar.confirmation_name')}", candidate_event_to_path(I18n.t('events.confirmation_name'), resource.id) %></li >
              <li ><%= link_to "#{I18n.t('label.sidebar.sponsor_agreement')}", candidate_event_to_path(I18n.t('events.sponsor_agreement'), resource.id) %></li >
              <li ><%= link_to "#{I18n.t('label.sidebar.christian_ministry')}", candidate_event_to_path(I18n.t('events.christian_ministry'), resource.id) %></li >
              <li ><%= link_to "#{I18n.t('label.sidebar.retreat_verification')}", candidate_event_to_path(I18n.t('events.retreat_verification'), resource.id) %></li >

              <li ><%= link_to "#{I18n.t('views.nav.edit')}", edit_candidate_path(resource.id) %></li >
              <li ><%= link_to "#{I18n.t('views.nav.events')}", event_candidate_path(resource.id) %></li >
            </ul >
        <% end %>
    <% end %>
<% end %>

<% if candidate_signed_in? %>
    <ul id = "candidate-sidebar" >
      <li ><%= link_to "#{I18n.t('label.sidebar.candidate_covenant_agreement')}", dev_sign_agreement_path(current_candidate.id) %></li >
      <li ><%= link_to "#{I18n.t('label.sidebar.candidate_information_sheet')}", dev_candidate_sheet_path(current_candidate.id) %></li >
      <li ><%= link_to "#{I18n.t('label.sidebar.baptismal_certificate')}", dev_event_with_picture_path(current_candidate.id, Event::Route::BAPTISMAL_CERTIFICATE) %></li >
      <li ><%= link_to "#{I18n.t('label.sidebar.sponsor_covenant')}", dev_event_with_picture_path(current_candidate.id, Event::Route::SPONSOR_COVENANT) %></li >
      <li ><%= link_to "#{I18n.t('label.sidebar.confirmation_name')}", dev_pick_confirmation_name_path(current_candidate.id) %></li >
      <li ><%= link_to "#{I18n.t('label.sidebar.sponsor_agreement')}", dev_sponsor_agreement_path(current_candidate.id) %></li >
      <li ><%= link_to "#{I18n.t('label.sidebar.christian_ministry')}", dev_christian_ministry_path(current_candidate.id) %></li >
      <li ><%= link_to "#{I18n.t('label.sidebar.retreat_verification')}", dev_event_with_picture_path(current_candidate.id, Event::Route::RETREAT_VERIFICATION) %></li >

      <li ><%= link_to "#{I18n.t('views.nav.edit')}", edit_candidate_registration_path %></li >
      <li ><%= link_to "#{I18n.t('views.nav.events')}", event_candidate_registration_path(current_candidate.id) %></li >
    </ul >
<% end %>