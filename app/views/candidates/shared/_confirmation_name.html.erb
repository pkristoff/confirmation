<%= form_for(@candidate, as: :candidate, url: is_dev ? dev_event_with_picture_update_path(@candidate.id, @event_with_picture_name) : event_with_picture_update_path(@candidate.id, @event_with_picture_name), html: {method: :put}) do |f| %>

    <div class="actions">
      <%= f.submit t('views.common.update'), id: 'top-update' %>
    </div>
    <%= f.fields_for :pick_confirmation_name do |pcn_fields| %>

        <%= field_set_tag t('field_set.confirmation_name.saint'), class: 'fieldset' do %>
            <div class="field">
              <%= pcn_fields.label :saint_name, t('label.confirmation_name.saint_name') %><br/>
              <%= pcn_fields.text_field :saint_name %>
            </div>
            <div class="field">
              <%= pcn_fields.label :about_saint, t('label.confirmation_name.about_saint') %><br/>
              <%= pcn_fields.text_area :about_saint %>
            </div>
            <div class="field">
              <%= pcn_fields.label :why_saint, t('label.confirmation_name.why_saint')%><br/>
              <%= pcn_fields.text_area :why_saint %>
            </div>
        <% end %>
        <div class="field">
          <%= pcn_fields.label :pick_confirmation_name_picture, t('label.confirmation_name.pick_confirmation_name_picture') %><br/>
          <%= pcn_fields.file_field :pick_confirmation_name_picture %>
        </div>

        <% unless @candidate.pick_confirmation_name.pick_confirmation_name_filename.nil? %>
            <div>
              <img src="<%= url_for(is_dev ? dev_event_with_picture_image_path(@candidate.id, @event_with_picture_name) : event_with_picture_image_path(@candidate.id, @event_with_picture_name)) %>"/>
            </div>
        <% end %>
    <% end %>

    <div class="actions">
      <%= f.submit t('views.common.update'), id: 'bottom-update' %>
    </div>

<% end %>