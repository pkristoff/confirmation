<% if admin_signed_in? %>
    <% if admin_signed_in? %>
        <li><%= link_to I18n.t('views.nav.add_new_admin'), new_admin_registration_path %></li>
        <li><%= link_to I18n.t('views.nav.edit_account'), edit_admin_registration_path %></li>
        <li><%= link_to I18n.t('views.nav.candidates'), candidates_path %></li>
        <li><%= link_to I18n.t('views.nav.add_new_candidate'), new_candidate_path %></li>
        <li><%= link_to I18n.t('views.nav.admins'), admins_path %></li>
        <li><%= link_to I18n.t('views.nav.events'), events_path %></li>
        <li><%= link_to I18n.t('views.nav.other'), new_candidate_import_path %></li>
        <% if defined?(resource) && (!resource.nil?) && (!resource.new_record?) && (resource.is_a? Candidate) %>
            <p class="sidebar-header">Candidate <%= "#{resource.first_name} #{resource.last_name}" %></p>

            <li><%= link_to "#{I18n.t('views.nav.upload_baptismal_certificate')} #{resource.first_name} #{resource.last_name}", upload_baptismal_certificate_path(resource.id) %></li>

            <li><%= link_to "#{I18n.t('views.nav.edit')} #{resource.first_name} #{resource.last_name}", edit_candidate_path(resource.id) %></li>
            <li><%= link_to "#{I18n.t('views.nav.events')} #{resource.first_name} #{resource.last_name}", event_candidate_path(resource.id) %></li>
        <% end %>
    <% end %>
<% end %>

<% if candidate_signed_in? %>

    <li><%= link_to "#{I18n.t('views.nav.sign_agreement')}", sign_agreement_path(current_candidate.id) %></li>
    <li><%= link_to "#{I18n.t('views.nav.candidate_sheet')}", candidate_sheet_path(current_candidate.id) %></li>
    <li><%= link_to "#{I18n.t('views.nav.upload_baptismal_certificate')}", dev_upload_baptismal_certificate_path(current_candidate.id) %></li>

    <li><%= link_to "#{I18n.t('views.nav.edit')} #{current_candidate.first_name} #{current_candidate.last_name}", edit_candidate_registration_path %></li>
    <li><%= link_to "#{I18n.t('views.nav.events')} #{current_candidate.first_name} #{current_candidate.last_name}", event_candidate_registration_path(current_candidate.id) %></li>
<% end %>