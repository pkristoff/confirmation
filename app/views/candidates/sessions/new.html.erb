

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <h2><%= t('views.top_bar.sign_in', name: '') %></h2>
  <div class="field">
    <%= f.label :account_name, I18n.t('views.admins.account_name') %><br />
    <%= f.text_field :account_name, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :password, I18n.t('views.common.password') %><br />
    <%= f.password_field :password, autocomplete: 'off' %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me, I18n.t('views.common.remember_me') %>
    </div>
  <% end -%>
  <%= render 'devise/shared/links' %>

  <div class="actions">
    <%= f.submit t('views.top_bar.sign_in', name: resource_name) %>
  </div>
<% end %>
