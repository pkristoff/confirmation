<%= form_tag monthly_mass_mailing_update_path, method: :put, multipart: true do %>

  <%= submit_tag t('email.monthly_mail'), id: 'top-update' %>
  <%= submit_tag t('email.test_monthly_mail'), id: 'top-test' %>

  <%= render 'shared/monthly_mass_mailing_edit_body',
             render_mail_text: false
  %>

  <%= render 'shared/sorting_candidate_selection',
             candidate_info: @candidate_info,
             confirmation_event: nil,
             other_columns: nil,
             route: :monthly_mass_mailing,
             selected_candidate_ids: @selected_candidate_ids
  %>

  <%= submit_tag t('email.monthly_mail'), id: 'bottom-update' %>
  <%= submit_tag t('email.test_monthly_mail'), id: 'bottom-test' %>

<% end %>