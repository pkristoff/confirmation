<h2>Status <%= "#{resource.account_name}" %></h2>

<%= devise_error_messages! %>

<%= form_for(resource, as: resource_name, url: create_candidate_path(), html: {role: 'form'}) do |f| %>

    <%= f.fields_for :candidate_events do |candidate_event_fields| %>
        <%= candidate_event_fields.fields_for :confirmation_event do |confirmation_event_fields| %>
            <%= field_set_tag confirmation_event_fields.object.name, class: 'fieldset', id: "candidate_candidate_events_attributes_#{candidate_event_fields.index}_confirmation_event_attributes_name" do %>
                <div class="fieldset-div">
                  <div class="field" id='<%= "candidate_candidate_events_attributes_#{candidate_event_fields.index}_confirmation_event_attributes_due_date" %>'>
                    Due Date : <%= l confirmation_event_fields.object.due_date, format: :default %>
                  </div>
                  <div class="field">
                    Admin Confirmed : <%= candidate_event_fields.check_box :admin_confirmed %>
                  </div>
                  <div class="field" id='<%= "candidate_candidate_events_attributes_#{candidate_event_fields.index}_confirmation_event_attributes_completed_date" %>'>
                    <% completed_date = candidate_event_fields.object.completed_date %>
                    Completed : <%= (completed_date.nil?) ? '' : l(completed_date, format: :default) %>
                  </div>
                </div>
            <% end %>
        <% end %>
    <% end %>
<% end %>
