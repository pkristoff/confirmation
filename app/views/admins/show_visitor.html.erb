<section id="home">
  <h2><%= t('views.nav.visitors') %></h2>

  <%= form_for @visitor, url: update_visitor_path(@visitor.id), method: :post do |f| %>
    <%= f.submit t('views.common.update_home'), id: "top-update" %>

    <%= f.label(:home, 'Home') %>
    <%= f.text_area :home, class: "tinymce_home", rows: 20, cols: 120 %>

    <%= f.submit t('views.common.update_home'), id: "bottom-update" %>
  <% end %>
</section>


<script type="text/javascript">
    tinyMCE.init({
        selector: "textarea.tinymce_home",
        toolbar:  ["insertfile undo redo | styleselect | bold italic | alignleft aligncenter alignright alignjustify | bullist numlist outdent indent | link image"],
        plugins:  "advlist,autolink,lists,link,image,charmap,preview,anchor,searchreplace,visualblocks,code,fullscreen,insertdatetime,media,table,contextmenu,paste,code"

    });
</script>