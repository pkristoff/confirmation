<% if candidate_signed_in? %>
    <li><%= link_to 'Edit account', edit_candidate_registration_path %></li>
    <li><%= link_to 'Sign out', destroy_candidate_session_path, :method => 'delete' %></li>
    <% end %>
    <% if admin_signed_in? %>
    <li><%= link_to 'Add new admin', new_admin_registration_path %></li>
    <li><%= link_to 'Edit account', edit_admin_registration_path %></li>
    <li><%= link_to 'Sign out', destroy_admin_session_path, :method => 'delete' %></li>
<% end %>

<% if ! (admin_signed_in? or candidate_signed_in?) %>
    <li><%= link_to 'Sign in', new_candidate_session_path %></li>
    <li><%= link_to 'Sign in admin', new_admin_session_path %></li>
<% end %>
<% if admin_signed_in? %>
    <li><%= link_to 'Candidates', candidates_path %></li>
    <li><%= link_to 'Add new candidate', new_candidate_path %></li>
    <li><%= link_to 'Admins', admins_path %></li>
    <li><%= link_to 'Import candidates', new_candidate_import_path %></li>
    <li><%= link_to 'Reset everything', candidate_imports_reset_path %></li>
<% end %>
