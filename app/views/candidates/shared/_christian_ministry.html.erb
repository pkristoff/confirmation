<%= form_for(@candidate, as: :candidate, url: is_dev ? dev_event_with_picture_update_path(@candidate.id, @event_with_picture_name) : event_with_picture_update_path(@candidate.id, @event_with_picture_name), html: {method: :put}) do |f| %>

    <div class="actions">
      <%= f.submit t('views.common.update'), id: 'top-update' %>
    </div>
    <%= f.fields_for :christian_ministry do |cm_fields| %>

        <%= field_set_tag t('field_set.christian_ministry.questions'), class: 'fieldset' do %>
            <div class="field">
              <%= cm_fields.label :what_service, t('label.christian_ministry.what_service') %><br/>
              <%= cm_fields.text_field :what_service %>
            </div>
            <div class="field">
              <%= cm_fields.label :where_service, t('label.christian_ministry.where_service') %><br/>
              <%= cm_fields.text_area :where_service %>
            </div>
            <div class="field">
              <%= cm_fields.label :when_service, t('label.christian_ministry.when_service') %><br/>
              <%= cm_fields.text_area :when_service %>
            </div>
            <div class="field">
              <%= cm_fields.label :helped_me, t('label.christian_ministry.helped_me') %><br/>
              <%= cm_fields.text_area :helped_me %>
            </div>
            <div class="field">
              <%= cm_fields.label :signed, t('label.christian_ministry.signed') %><br/>
              <%= cm_fields.check_box :signed %>
            </div>
        <% end %>
        <div class="field">
          <%= cm_fields.label :christian_ministry_picture, t('label.christian_ministry.christian_ministry_picture') %><br/>
          <%= cm_fields.file_field :christian_ministry_picture %>
        </div>

        <% unless @candidate.christian_ministry.christian_ministry_filename.nil? %>
            <div>
              <img src="<%= url_for(is_dev ? dev_event_with_picture_image_path(@candidate.id, @event_with_picture_name) : event_with_picture_image_path(@candidate.id, @event_with_picture_name)) %>"/>
            </div>
        <% end %>
    <% end %>

    <div class="actions">
      <%= f.submit t('views.common.update'), id: 'bottom-update' %>
    </div>

<% end %>