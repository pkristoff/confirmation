<%= form_for(@candidate, as: :candidate, url: path, html: {method: :put}) do |f| %>


    <%= f.fields_for :candidate_sheet do |cs_fields| %>
        <%= field_set_tag t('views.candidates.candidate_name'), class: 'fieldset' do %>
            <div class="fieldset-div">
              <div class="field">
                <%= cs_fields.label :first_name %><br/>
                <%= cs_fields.text_field :first_name, autofocus: true %>
              </div>

              <div class="field">
                <%= cs_fields.label :last_name %><br/>
                <%= cs_fields.text_field :last_name %>
              </div>
            </div>
        <% end %>

        <%= field_set_tag t('views.candidates.address'), class: 'fieldset' do %>
            <div class="fieldset-div">
              <%= cs_fields.fields_for :address do |address_fields| %>
                  <div class="field">
                    <%= address_fields.label :street_1 %><br/>
                    <%= address_fields.text_field :street_1 %>
                  </div>
                  <div class="field">
                    <%= address_fields.label :street_2 %><br/>
                    <%= address_fields.text_field :street_2 %>
                  </div>
                  <div class="field">
                    <%= address_fields.label :city %><br/>
                    <%= address_fields.text_field :city %>
                  </div>
                  <div class="field">
                    <%= address_fields.label :state %><br/>
                    <%= address_fields.text_field :state %>
                  </div>
                  <div class="field">
                    <%= address_fields.label :zip_code %><br/>
                    <%= address_fields.text_field :zip_code %>
                  </div>
              <% end %>
            </div>
        <% end %>

        <%= field_set_tag t('views.candidates.email'), class: 'fieldset' do %>
            <div class="fieldset-div">
              <div class="field">
                <%= cs_fields.label :candidate_email %><br/>
                <%= cs_fields.email_field :candidate_email %>
              </div>

              <div class="field">
                <%= cs_fields.label :parent_email_1 %><br/>
                <%= cs_fields.email_field :parent_email_1 %>
              </div>

              <div class="field">
                <%= cs_fields.label :parent_email_2 %><br/>
                <%= cs_fields.email_field :parent_email_2 %>
              </div>
            </div>
        <% end %>

        <%= field_set_tag t('views.candidates.other'), class: 'fieldset' do %>
            <div class="fieldset-div">
              <div class="field">
                <%= cs_fields.label :grade %><br/>
                <%= cs_fields.number_field :grade, min: 8, max: 12 %>
              </div>
            </div>
        <% end %>
    <% end %>


    <div class="actions">
      <%= f.submit t('views.common.update') %>
    </div>

<% end %>