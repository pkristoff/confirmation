<% if @candidate.christian_ministry && @candidate.christian_ministry.errors.any? %>
    <div id = "error_explanation" >
      <h2 ><%= pluralize(@candidate.christian_ministry.errors.count, "error") %> prohibited saving:</h2 >

      <ul >
        <% @candidate.christian_ministry.errors.full_messages.each do |msg| %>
            <li ><%= msg %></li >
        <% end %>
      </ul >
    </div >
<% end %>

  <%= form_for(@candidate, as: :candidate, url: is_dev ? dev_event_with_picture_update_path(@candidate.id, @event_with_picture_name) : event_with_picture_update_path(@candidate.id, @event_with_picture_name), html: {method: :put}) do |f| %>
    <%= f.fields_for :christian_ministry do |cm_fields| %>

        <%= field_set_tag t('views.candidates.christian_ministry'), class: 'fieldset' do %>
            <div class = "field" >
              <%= cm_fields.label :what_service %><br />
              <%= cm_fields.text_field :what_service %>
            </div >
            <div class = "field" >
              <%= cm_fields.label :where_service %><br />
              <%= cm_fields.text_area :where_service %>
            </div >
            <div class = "field" >
              <%= cm_fields.label :when_service %><br />
              <%= cm_fields.text_area :when_service %>
            </div >
            <div class = "field" >
              <%= cm_fields.label :helped_me %><br />
              <%= cm_fields.text_area :helped_me %>
            </div >
            <div class = "field" >
              <%= cm_fields.label :signed %><br />
              <%= cm_fields.check_box :signed %>
            </div >
        <% end %>
        <div class = "field" >
          <%= cm_fields.label :christian_ministry_picture %><br />
          <%= cm_fields.file_field :christian_ministry_picture %>
        </div >

        <% unless @candidate.christian_ministry.christian_ministry_filename.nil? %>
            <div >
              <img src = "<%= url_for(is_dev ? dev_event_with_picture_image_path(@candidate.id, @event_with_picture_name) : event_with_picture_image_path(@candidate.id, @event_with_picture_name)) %>" />
            </div >
        <% end %>
    <% end %>

    <div class = "actions" >
      <%= f.submit t('views.common.update') %>
    </div >

<% end %>

<div class = "actions" >
  <%= button_to t('views.common.download'), download_doc, {method: :put} %>
</div >